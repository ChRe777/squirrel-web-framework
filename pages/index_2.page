---

import { Nav } from "./components/nav.squirrel";
import { Navbar } from "./components/navbar.squirrel";
import { Badge } from "./components/badge.uhtml";
import { Users } from "./components/Users.uhtml";
import { ButtonClick } from "./components/Button.uhtml";

const title = "Users";
---
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Deno + uHTML</title>

        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/spectre.css/0.4.5/spectre.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/spectre.css/0.4.5/spectre-exp.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/spectre.css/0.4.5/spectre-icons.min.css"
        />
        <style>
            body,
            html {
                height: 100vh;
                padding: 0px;
                margin: 0px;
            }
            #navbar {
                position: sticky;
            }
        </style>
    </head>
    <body>
        <Navbar></Navbar>
        <div class="container">
            <div class="columns">
                <div class="column col-3">
                    <Nav></Nav>
                </div>
                <div class="divider-vert" data-content=""></div>
                <div class="column">
                    <Badge></Badge>
                    <Users class="mt-2"></Users>
                    <ButtonClick class="mt-2"></ButtonClick>
                </div>
            </div>
        </div>
    </body>
</html>
